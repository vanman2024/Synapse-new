{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    // Set to false now, but plan to enable incrementally
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // Consider enabling these gradually for better type safety
    "noImplicitAny": false, // Try to enable this first
    "strictNullChecks": false, // Enable this second
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    // Consider enabling these for cleaner code
    "noUnusedLocals": false, // Enable after initial development
    "noUnusedParameters": false,
    "noImplicitReturns": true, // This one's safe to enable now
    "noFallthroughCasesInSwitch": true, // This one's safe to enable now
    "downlevelIteration": true,
    // Using older style for import handling
    "importsNotUsedAsValues": "remove",
    "isolatedModules": false
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}